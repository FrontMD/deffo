        classes: '',
        title: 'Образцы исполнения',
        cards: [
            {
                desc: 'Фрезеровка: A6 <br>Покрытие: FS 305-2 Айс какао',
                images: ['img/catalog/sample_1.webp', 'img/catalog/sample_6.webp', 'img/catalog/sample_11.webp']
            },

            {
