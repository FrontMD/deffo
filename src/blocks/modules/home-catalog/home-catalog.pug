-
    const defaultHomeCatalogProps = {
        classes: '',

    }

mixin home-catalog(props= defaultHomeCatalogProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultHomeCatalogProps.classes
        }

    section.home-catalog.section(class= checkProps.classes data-js="homeCatalog")&attributes(attributes)    
        .section__bg
            picture
                img(src='img/home/blured_bg.webp' alt='')

        .d-container
            +tabs-block({
                tabs: [
                    {
                        name: 'Категории',
                        icon: ''
                    },
                    {
                        name: 'Галерея фасадов',
                        icon: ''
                    },
                ],
            })
                .tabs-block__slide.active(data-js="tabsBlockSlide")
                    .home-catalog__list
                        .home-catalog__block
                            .catalog-card.catalog-card--full(data-js="catalogCard")
                                .catalog-card__bg
                                    img(src="img/catalog/card_1.webp" alt="")
                                .catalog-card__title(data-js="catalogCardTitle")
                                    span Виды продукции
                                a(href="javascript:void(0);").catalog-card__link
                            .catalog-card(data-js="catalogCard")
                                .catalog-card__bg
                                    img(src="img/catalog/card_2.webp" alt="")
                                .catalog-card__title(data-js="catalogCardTitle")
                                    span Торцы фасадов
                                a(href="javascript:void(0);").catalog-card__link
                            .catalog-card(data-js="catalogCard")
                                .catalog-card__bg
                                    img(src="img/catalog/card_3.webp" alt="")
                                .catalog-card__title(data-js="catalogCardTitle")
                                    span Патина
                                a(href="javascript:void(0);").catalog-card__link

                        .home-catalog__block
                            .catalog-card(data-js="catalogCard")
                                .catalog-card__bg
                                    img(src="img/catalog/card_4.webp" alt="")
                                .catalog-card__title(data-js="catalogCardTitle")
                                    span фрезеровки
                                a(href="javascript:void(0);").catalog-card__link
                            .catalog-card(data-js="catalogCard")
                                .catalog-card__bg
                                    img(src="img/catalog/card_5.webp" alt="")
                                .catalog-card__title(data-js="catalogCardTitle")
                                    span Типы покрытия
                                a(href="javascript:void(0);").catalog-card__link
                            .catalog-card.catalog-card--full(data-js="catalogCard")
                                .catalog-card__bg
                                    img(src="img/catalog/card_6.webp" alt="")
                                .catalog-card__title(data-js="catalogCardTitle")
                                    span декоративные элементы
                                a(href="javascript:void(0);").catalog-card__link

                .tabs-block__slide(data-js="tabsBlockSlide")
                    .home-catalog__list
                        .home-catalog__block
                            .catalog-card.catalog-card--full(data-js="catalogCard")
                                .catalog-card__bg
                                    img(src="img/catalog/card_1.webp" alt="")
                                .catalog-card__title(data-js="catalogCardTitle")
                                    span Фасад прямой с решеткой №1
                                a(href="javascript:void(0);").catalog-card__link
                            .catalog-card(data-js="catalogCard")
                                .catalog-card__bg
                                    img(src="img/catalog/card_2.webp" alt="")
                                .catalog-card__title(data-js="catalogCardTitle")
                                    span Фасад прямой с решеткой №2
                                a(href="javascript:void(0);").catalog-card__link
                            .catalog-card(data-js="catalogCard")
                                .catalog-card__bg
                                    img(src="img/catalog/card_3.webp" alt="")
                                .catalog-card__title(data-js="catalogCardTitle")
                                    span Фасад прямой с решеткой №3
                                a(href="javascript:void(0);").catalog-card__link

                        .home-catalog__block
